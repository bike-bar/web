{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      2,
      {
        "endOfLine": "lf",
        "tabWidth": 2,
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none"
      },
      {
        "usePrettierrc": false
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": [
      2,
      {
        "ignorePureComponents": true
      }
    ],
    "react/forbid-prop-types": [
      0,
      {
        "forbid": []
      }
    ],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": [
          "CustomInputLabel"
        ],
        "labelAttributes": [
          "label"
        ],
        "controlComponents": [
          "CustomInput"
        ],
        "depth": 3
      }
    ],
    "react/jsx-one-expression-per-line": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-props-no-spreading": 0,
    "arrow-parens": 0,
    "camelcase": 0,
    "comma-dangle": 0,
    "global-require": 0,
    "implicit-arrow-linebreak": 0,
    "no-confusing-arrow": 0,
    "no-return-assign": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "semi-style": 0,
    "semi": 0,
    "import/prefer-default-export": 0
  },
  "globals": {
    "fetch": false,
    "navigator": false,
    "window": false
  }
}
